            "problemMatcher": []
        },
        {
            "label": "CMake project",
            "type": "shell",
            "group": "build",
            "command": "rm -r ./build && mkdir build && cmake -S ./ -B ./build/ && cmake --build ./build/",
            "detail": "Пересобрать проект",

            "problemMatcher": []
        },
